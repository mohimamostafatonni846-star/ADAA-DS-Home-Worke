#include <stdio.h>

int main() {
    int n, i;
    double sum = 0, avg;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    int arr[n];
    
    printf("Enter %d elements: ", n);
    for(i = 0; i < n; i++)
        scanf("%d", &arr[i]);
    
    for(i = 0; i < n; i++)
        sum += arr[i];
    
    avg = sum / n;
    
    printf("Sum = %.2lf\nAverage = %.2lf\n", sum, avg);
    return 0;
}