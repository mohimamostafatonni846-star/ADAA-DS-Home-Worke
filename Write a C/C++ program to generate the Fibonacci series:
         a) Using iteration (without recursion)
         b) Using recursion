#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number of terms: ";
    cin >> n;

    int a = 0, b = 1;
    
    cout << "Fibonacci Series (Iterative): ";
    for(int i = 0; i < n; i++) {
        cout << a << " ";
        int next = a + b;
        a = b;
        b = next;
    }

    cout << endl;
    return 0;
}

(b)

#include <iostream>
using namespace std;

// Recursive function to return the nth Fibonacci number
int fibonacci(int n) {
    if(n == 0) return 0;   // Base case
    if(n == 1) return 1;   // Base case
    return fibonacci(n-1) + fibonacci(n-2); // Recursive call
}

int main() {
    int n;
    cout << "Enter the number of terms: ";
    cin >> n;

    cout << "Fibonacci Series (Recursive): ";
    for(int i = 0; i < n; i++) {
        cout << fibonacci(i) << " ";
    }

    cout << endl;
    return 0;
}